{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": "2018"
  },
  "extends": [
    "airbnb-base",
    "eslint-config-prettier"
  ],
  "env": {
    "node": true,
    "mocha": true
  },
  "plugins": [
    "mocha"
  ],
  "rules": {
    "no-console": [
      "error",
      {
        "allow": [
          "info",
          "debug",
          "warn",
          "error"
        ]
      }
    ],
    "no-underscore-dangle": [
      "error",
      {
        "allowAfterThis": true
      }
    ],
    "class-methods-use-this": 0,
    "no-plusplus": [
      "error",
      {
        "allowForLoopAfterthoughts": true
      }
    ],
    "no-param-reassign": [
      "error",
      { "props": false }
    ],
    "mocha/no-skipped-tests": "error",
    "mocha/no-exclusive-tests": "error"
  },
  "globals": {
    "_config": true,
    "getEnv": true,
    "appEmitter": true,
    "logger": true
  }
}
